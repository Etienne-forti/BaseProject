        <attr name="erv_textMarginLeft" format="dimension"/>
        <attr name="erv_textMarginTop" format="dimension"/>
        <attr name="erv_textMarginRight" format="dimension"/>
        <attr name="erv_textMarginBottom" format="dimension"/>
